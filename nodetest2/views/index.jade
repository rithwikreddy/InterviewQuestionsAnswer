
extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER DEPT
        #userDept
            h2 User Dept
            p
                strong Dname:
                |  <span id='userDeptDname'></span>
                br
                strong Salary:
                |  <span id='userDeptSalary'></span>
                br
                strong Bonus:
                |  <span id='userDeptBonus'></span>
                br
                strong Company:
                |  <span id='userInfoDeptCompany'></span>
        // /USER DEPT

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST

        // USER DEPT
        h2 User Dept
        #userDept
            table
                thead
                    th UserDname
                    th Salary
                    th Bonus
                    th Company
                tbody
        // /USER DEPT

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser Add User
        // /ADD USER

        // ADD DEPT
        h2 Add Dept
        #addDept
            fieldset
                input#inputUserDname(type='text', placeholder='Userdname')
                input#inputUserEmail(type='text', placeholder='Department')
                br
                input#inputUserTeamname(type='text', placeholder='Team Name')
                input#inputUserSalary(type='text', placeholder='Salary')
                br
                input#inputUserBonus(type='text', placeholder='Bonus')
                input#inputUserCompany(type='text', placeholder='Company')
                br
                button#btnAddUser Add Dept
        // /ADD DEPT

    // /WRAPPER
